#!/bin/bash

# Link all the key config files to MyHyprland's internal versions for quicker testing
ln -nsf ~/.local/share/MyHyprland/config/hypr/hyprland.conf ~/.config/hypr/
ln -nsf ~/.local/share/MyHyprland/config/hypr/hypridle.conf ~/.config/hypr/
ln -nsf ~/.local/share/MyHyprland/config/waybar/config ~/.config/waybar/
ln -nsf ~/.local/share/MyHyprland/config/wofi/config ~/.config/wofi/
